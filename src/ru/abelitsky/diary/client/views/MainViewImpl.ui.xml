<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:dp="urn:import:com.google.gwt.user.datepicker.client">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.bordered {
			border: 4px solid red;
		}
		
		.currentDate {
			color: #333333;
			font-size: 1.5em; 
			font-weight: bold;
			margin-left: 1em;
		}
		
		.editor-container {
			padding: 0px 6px 6px 3px;
			background-color: white;
		}
		
		.editor {
			background-color: white;
			width: 100%;
			height: 100%;
			border: 1px solid black;
		}
	</ui:style>
	<g:DockLayoutPanel unit='EM'>
		<g:north size='5'>
			<g:HTMLPanel>
				<h1
					style="font-size: 2em; font-weight: bold; color: #777777; margin: 20px 0 0 0; text-align: center;">
					Дневничок
				</h1>
			</g:HTMLPanel>
		</g:north>
		<g:west size='15'>
			<dp:DatePicker ui:field="calendar" width="15em" />
		</g:west>
		<g:north size='3'>
			<g:HorizontalPanel width="100%" height="100%" verticalAlignment="middle">
				<g:Label ui:field="currentDate" addStyleNames="{style.currentDate}">
					20 декабря 2013, пятница
				</g:Label>
			</g:HorizontalPanel>
		</g:north>
		<g:center>
			<g:SimplePanel styleName="{style.editor-container}">
				<g:TextArea styleName="{style.editor}" />
			</g:SimplePanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 