<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:dp="urn:import:com.google.gwt.user.datepicker.client">
	<ui:style>
		.title {
			font-size: 2em; 
			font-weight: bold; 
			color: #777777; 
			margin: 20px 0 0 0; 
			text-align: center;
		}
		
		.currentDate {
			color: #333333;
			font-size: 1.5em; 
			font-weight: bold;
			margin-left: 1em;
		}
		
		.calendar {
			width: 15em;
			margin: 1px 0.3em;
		}
			
		.editor-container {
			padding: 0px 6px 6px 3px;
			background-color: white;
		}
		
		.editor {
			width: 100%;
			height: 100%;
			border: 1px solid black;
			background-color: white;
			font: 11pt Arial;
		}
	</ui:style>
	<g:DockLayoutPanel unit='EM'>
		<g:north size='5'>
			<g:Label addStyleNames="{style.title}">Дневничок</g:Label>
		</g:north>
		<g:north size='3'>
			<g:HorizontalPanel width="100%" height="100%" verticalAlignment="middle">
				<g:Label ui:field="currentDate" addStyleNames="{style.currentDate}">
					Загрузка...
				</g:Label>
			</g:HorizontalPanel>
		</g:north>
		<g:east size='16'>
			<g:SimplePanel>
				<dp:DatePicker ui:field="calendar" addStyleNames="{style.calendar}" />
			</g:SimplePanel>
		</g:east>
		<g:center>
			<g:SimplePanel styleName="{style.editor-container}">
				<g:TextArea ui:field="recordSource" styleName="{style.editor}" />
			</g:SimplePanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 